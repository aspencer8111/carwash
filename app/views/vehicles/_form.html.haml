= form_for @vehicle do |f|
  - if @vehicle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle.errors.count, "error")} prohibited this vehicle from being saved:"
      %ul
        - @vehicle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :plate
    = f.text_field :plate
  .field
    = f.label :style
    = f.select :style, [ ['Car', :car], ['Truck', :truck] ]
  .field
    = f.label :mud_in_bed
    = f.check_box :mud_in_bed
  .field
    = f.label :bed_up
    = f.check_box :bed_up
  .actions
    = f.submit 'Save', id: 'Save'
